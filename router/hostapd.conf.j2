ctrl_interface=/var/run/hostapd
#ctrl_interface_group=0 # These 2 are just parameters so that the hostap daemon runs.

interface=wlan0
#interface=ap0
driver=nl80211

ssid={{ ssid }}

#2.4G
hw_mode=g
channel=8
wmm_enabled=1

#5G-Support
#country_code=DE
#ieee80211n=1
#ieee80211d=1
#hw_mode=a
#channel=48

#security
