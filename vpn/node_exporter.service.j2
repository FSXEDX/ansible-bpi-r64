[Unit]
Description=Prometheus exporter for machine metrics
Documentation=https://github.com/prometheus/node_exporter

[Service]
Restart=always
User=prometheus
ExecStart=/usr/local/bin/node_exporter --collector.textfile.directory={{ prom_collect_path }} --web.listen-address="{{ listen_address }}:9100"
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
